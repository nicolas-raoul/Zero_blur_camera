<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Rectangle (Top-Left) -->
    <item
        android:bottom="8dp"
        android:left="0dp"
        android:right="8dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shutter_color" />
            <stroke android:width="2dp" android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Middle Rectangle (Center) -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shutter_color" />
            <stroke android:width="2dp" android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Top Rectangle (Bottom-Right) -->
    <item
        android:bottom="0dp"
        android:left="8dp"
        android:right="0dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shutter_color" />
            <stroke android:width="2dp" android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Camera Icon (Centered on Top Rectangle) -->
    <item
        android:drawable="@drawable/ic_camera"
        android:gravity="center"
        android:bottom="0dp"
        android:left="8dp"
        android:right="0dp"
        android:top="8dp" />
</layer-list>
